<div class="reminder-body">
	<div class="container" >
		<div class="row">
			<div class="col-8 offset-2">
				<%= form_for @reminder,url:user_reminders_path,method: :post do |f| %>
					<h3>にゃんこメモ作成</h3>
					<p> 日付<%= f.text_field :date, placeholder: "2020/00/00" %></p>
					<p>件名<%= f.text_field :title, placeholder: "件名なし" %></p>
					<%= f.text_area :note, 'data-provider': :summernote %>
					<%= f.submit '保存',class: "btn btn-base-1 mt-10 bg-warning" %>
				<% end %>
			</div>
		</div>
	</div>
</div>