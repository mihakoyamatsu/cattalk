<div class="reminder-body">
	<div class="container" >
		<div class="row">
			 <table class="table index-box">
			 	<tr>
			 		<td>件名 : <%= @reminder.title %></td>
					<td>日付 : <%= @reminder.date %></td>
				</tr>
				<tr>
					<td colspan="3"><%= @reminder.note.html_safe %></td>
				</tr>
			</table>
			<%= link_to '一覧へ' ,user_reminders_path ,class: "btn btn-outline-primary"%>
			<%= link_to '編集' ,edit_user_reminder_path ,class: "btn btn-outline-warning"%>
			<%= link_to '削除' ,user_reminder_path,method: :delete, "data-confirm" =>"本当に消しますか?" ,class: "btn btn-outline-danger" %>
		</div>
	</div>
</div>