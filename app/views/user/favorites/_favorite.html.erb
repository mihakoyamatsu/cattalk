<% if user_signed_in? %>
  <% if current_user.favorites.find_by(post_id: post) %>
    <%= link_to "/user/posts/#{post.id}/favorites", method: :delete, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"><%= post.favorites.count %></i>
    <% end %>
  <% else %>
    <%= link_to "/user/posts/#{post.id}/favorites", method: :post, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true"><%= post.favorites.count %></i>
    <% end %>
  <% end %>
<% else %>
	<i class="fa fa-heart" aria-hidden="true">
			<%= post.favorites.count %>
	</i>
<% end %>