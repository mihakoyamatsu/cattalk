<% if user_signed_in? %>
	<% if @user.followed_by?(current_user) %>
		<%= link_to "フォロー中", user_user_relationships_path(@user.id),remote: true, method: :delete, class: 'btn btn-outline-primary rounded-pill' %>
	<% else %>
		<%= link_to "フォローする", user_user_relationships_path(@user.id),remote: true, method: :post,class: ' btn btn-outline-secondary rounded-pill' %>
	<% end %>
<% end %>