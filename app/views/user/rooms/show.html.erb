


<div class="container">
	<div class="row">
		<div class="col-8 offset-2 chat_room" style="background-color: #2c3e50;">
			<% @entries.each do |entry| %>
				<% current_user == entry.user ? @class = "current_user" : @class = ""  %>
				<% if entry.user != current_user %>
				  <h5 class="text-left <%= @class %>" id="<%= @class %>" style="font-size: 30px;" data-id="<%= entry.user.id %>"><%= link_to "@#{entry.user.name}", user_user_path(entry.user_id) %></h5>
				<% else %>
				  <h5 class="text-left <%= @class %>" id="<%= @class %>" data-id="<%= entry.user.id %>"></h5>
				<% end %>
			<% end %>


			<div class="chat-border"></div>
			<div id="direct_messages" data-room_id="<%= @room.id %>">
			  <%= render @direct_messages %>
			</div>
			<div class="chat-border"></div>
			<form>
			  <label style="color: white;">新しいメッセージを作成</label><br>
			  <input type="text" id="chat-input" data-behavior="room_speaker" class="form-control">
			</form>
		</div>
	</div>
</div>