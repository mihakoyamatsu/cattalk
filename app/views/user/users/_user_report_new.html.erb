
<!-- 切り替えボタンの設定 -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#user-report-Modal">通報</button>

<!-- モーダルの設定 -->
<div class="modal fade" id="user-report-Modal" tabindex="-1" role="dialog" aria-labelledby="user-report-ModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="user-report-ModalLabel">このユーザーを通報する</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
			<%= form_for @report, url: user_user_user_reports_path(@user.id), method: :post  do |f| %>
  			<p>通報内容</p><%= f.text_area :report_message %>
			<%= f.submit "通報する" %>
			<% end %>
      </div>
      
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->