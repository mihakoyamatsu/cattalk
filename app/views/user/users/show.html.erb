
<% render 'mypageheader' %>

<div class="container">
	<div class="row">
		<div class="col-4">
			<h4>プロフィール</h4>
				<div class="user-profile">
					<table class="table table-responsive">
						<tr>
							<td>プロフィール画像</td>
							<td><%= attachment_image_tag @user, :image, format: 'jpeg',fallback: "no_image.jpg", size: "100x100" %></td>
						</tr>
						<tr>
							<td>アカウント名</td>
							<td><%= @user.name %></td>
						</tr>
						<tr>
							<td>メールアドレス</td>
							<td><%= @user.email %></td>
						</tr>
						<tr>
							<td>お住まい地域</td>
							<td><%= @user.prefectures %></td>
						</tr>
						<tr>
							<td>お住まい市町村</td>
							<td><%= @user.cities %></td>
						</tr>
						<tr>
							<td>自己紹介文</td>
							<td><%= @user.introduce %></td>
						</tr>
					</table>
				</div>
				<% if @user.id == current_user.id %>
					<%= link_to "退会する", user_users_hide_path(@user), method: :put, data: { confirm: "本当にこのサイトを退会してよろしいですか？","commit" => "退会します", "cancel" => "やっぱりやめる",}, title: "退会の確認" %>
					<%= link_to 'プロフィール編集', edit_user_user_path(current_user.id), class: "btn-warning" %>
				<% else %>
					<div><%= render 'user_report_new' %></div>
				<% end %>

		</div>
		<div class="col-8">
			<h4>MY CAT</h4>
				<div class="cat-profile">
					<% @user.cats.each.with_index(1) do |cat, i| %>
						<% if cat.sex == "オス" and cat.sex =="オス去勢済み" %>
	  						<div class = "cat-profile_mens">
		  						<table class="table table-responsive">
			  						<tr>
			  							<td>NO.<%= i %></td>
			  						</tr>
			  						<tr>
			  							<td>お名前</td>
			  							<td><%= cat.name %></td>
			  						</tr>
			  						<tr>
			  							<td>血液型</td>
			  							<td><%= cat.blood_type %></td>
			  						</tr>
			  						<tr>
			  							<td>ステータス</td>
			  							<td><%= cat.status %></td>
			  						</tr>
			  						<tr>
			  							<td>種類</td>
			  							<td><%= cat.breed %></td>
			  						</tr>
			  						<tr>
			  							<td>期間</td>
			  							<td><%= cat.term %></td>
			  						</tr>
			  						<tr class ="note">
			  							<td class="note-title">note</td>
			  							<td><%= cat.note %></td>
			  						</tr>
			  						<tr>
			  							<td>
			  								<% if @user.id == current_user.id %>
												<%= link_to 'MY CAT編集', edit_user_cat_path(cat), class: "btn-warning" %>
											<% end %>
										</td>
			  						</tr>
			  					</table>
			  				</div>
		  				<% else %>
		  					<div class = "cat-profile_ledis">
		  						<table class="table table-responsive">
			  						<tr>
			  							<td>NO.</td>
			  							<td><%= i %></td>
			  						</tr>
			  						<tr>
			  							<td>お名前</td>
			  							<td><%= cat.name %></td>
			  						</tr>
			  						<tr>
			  							<td>血液型</td>
			  							<td><%= cat.blood_type %></td>
			  						</tr>
			  						<tr>
			  							<td>ステータス</td>
			  							<td><%= cat.status %></td>
			  						</tr>
			  						<tr>
			  							<td>種類</td>
			  							<td><%= cat.breed %></td>
			  						</tr>
			  						<tr>
			  							<td>期間</td>
			  							<td><%= cat.term %></td>
			  						</tr>
			  						<tr>
			  							<td>note</td>
			  							<td><%= cat.note %></td>
		  							</tr>
		  							<tr>
			  							<td>
			  								<% if @user.id == current_user.id %>
												<%= link_to 'MY CAT編集', edit_user_cat_path(cat), class: "btn-warning" %>
											<% end %>
										</td>
			  						</tr>
			  					</table>
		  					</div>
	  					<% end %>
	  				<% end %>
		  		</div>
		  		<div class="cat-info-new">
		  			<% if @user.id == current_user.id %>
							<!-- 切り替えボタンの設定 -->
							<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
							ココを押すと表示
							</button>

							<!-- モーダルの設定 -->
							<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
							<div class="modal-dialog" role="document">
							<div class="modal-content">
							<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">モーダルのタイトル</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
							<span aria-hidden="true">&times;</span>
							</button>
							</div>
							<div class="modal-body">
							<p><%= render 'cat_new' %></p>
							</div>
							<div class="modal-footer">
							</div><!-- /.modal-footer -->
							</div><!-- /.modal-content -->
							</div><!-- /.modal-dialog -->
							</div><!-- /.modal -->
					<% end %>
				</div>
		</div>
	</div>

	<div class="row">
		<% if @user.id != current_user.id %>
			<div id="follow_form"><%= render 'user/relationships/relationship', user: @user %></div>
				<% if current_user.followed_by?(@user) %>
					<% if @isRoom == true %>
				  		<%= link_to "チャットルームへ入る", user_room_path(@roomId) %>
					<% else %>
				  		<%= form_for @room, url: user_rooms_path do |f| %>
				    		<%= f.hidden_field :name, :value => "ダイレクトメッセージ" %>
				    		<!--%= f.fields_for @entry do |e| %-->
				     		 <%= f.hidden_field :user_id, :value => @user.id %>
				    		<!--% end %-->
				    		<%= f.submit "チャットを開始する" %>
				  		<% end %>
					<% end %>
				<% end %>
   		<% end %>
	</div>
</div>




