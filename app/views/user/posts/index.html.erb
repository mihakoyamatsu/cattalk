<div class="index_background">
  <section class="container">
    <div class="row">
      <div class="col-8 offset-4 index-box">
          <tbody>
            <section class="text-left">
                <h1>投稿一覧</h1>
                <% @posts.each do |post| %>
                  <table class="table table-responsive" ~~~ style="table-layout:fixed;width:100%;">
                    <tbody>
                      <tr>
                        <td>
                          <%= attachment_image_tag post.user, :image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpeg", size:'50×50' %><br>
                          <%= link_to post.user.name, user_user_path(post.user.id) %>
                        </td>
                        <td>
                          <%= link_to post.body, user_post_path(post.id) %>
                        <br>
                          <% post.post_images.each do |post_image| %>
                          <%= attachment_image_tag post_image, :image, :fill, 50, 50, format:'jpeg' , fallback: "no_image.jpeg", size:'50×50' %>
                          <% end %>
                        </td>
                      </tr>

                      <tr>
                        <td><%= post.created_at.strftime('%Y/%m/%d') %>
                            <%= link_to user_post_path(post.id) do %>
                            <i class="fa fa-commenting-o" aria-hidden="true"><%= "#{post.comments.count} " %></i>
                            <% end %>
                            <i class="post-favorite-<%= post.id %>">
                            <%= render 'user/favorites/favorite', post: post %>
                            </i>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                <% end %>
            </section>
          </tbody>
      </div>
    </div>
  </section>
</div>