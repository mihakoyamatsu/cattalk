<section class="container">
  <tbody>
    <table class="table table-responsive">
      <h1>投稿詳細</h1>
      <tr>
      	<td><%= attachment_image_tag @post.user, :image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpeg", size:'50×50' %> </td>
        <td><%= link_to @post.user.name, user_user_path(@post.user.id) %></td>
        <td><%= @post.body %></td>
      </tr>
    </table>

    <table class="table table-responsive">
        <h4>この投稿を通報する</h4>
        <%= form_for @report, url:user_post_post_reports_path(@post) do |f| %>
        <%= f.text_area :report_message, placeholder: "通報内容を詳しくご記入ください。" %>
        <%= f.submit "送信する",class: "btn btn-sm btn-primary mt-20 pull-right" %>
        <% end %>
    </table>

    <% if @post.favorited_by?(current_user) %>
          <div class="right" >
            <%= link_to user_post_favorites_path(@post),method: :delete do %>
              <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= @post.favorites.count %>いいね！
            <% end %>
          </div>
    <% else %>
          <div class="right" >
            <%= link_to user_post_favorites_path(@post), method: :post do %>
              <i class="fa fa-heart-o" aria-hidden="true"></i>
              <%= @post.favorites.count %>いいね！
            <% end %>
          </div>
    <% end %>
    <table class="table table-responsive">
        <tr>
          <%= @post.comments.count %>件コメント
        </tr>
        <% @post.comments.each do |comment| %>
        <tr>
          <td>
            <br>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpeg" %>
            </br>
            <%= comment.user.name %>
          </td>
          <td>
            <br>
              <%= comment.created_at.strftime('%Y/%m/%d') %>
            </br>
            <%= comment.comment %>
          </td>
          <!--td-->
            <!--% if comment.user == current_user %-->
            <!--%= link_to "削除", user_post_comment_path(@post.id,comment.id), method: :delete, "data-confirm" =>"本当に消しますか?" ,class: "btn btn-sm btn-link pull-right" %--><!--% end %-->
          <!--/td-->
        </tr>
        <% end %>
      </table>
      <table class="table table-responsive">
        <h4>コメント</h4>
        <%= form_for @comment, url: user_post_comments_path(@post) do |f| %>
        <%= f.text_field :comment,class: "col-xs-12", placeholder: "コメントをここに" %>
        <%= f.submit "送信する", class: "btn btn-sm btn-primary mt-20 pull-right" %>
        <% end %>
      </table>
      
  </tbody>
</section>